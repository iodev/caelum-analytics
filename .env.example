# Caelum Analytics Environment Configuration Template
# Copy this file to .env and update the values

# Core Settings
CAELUM_ANALYTICS_HOST=0.0.0.0
CAELUM_ANALYTICS_PORT=8090
DEBUG=false
LOG_LEVEL=info

# Caelum MCP Integration
CAELUM_BASE_URL=http://localhost:3000
CAELUM_API_KEY=your-api-key-here
MCP_SERVERS_CONFIG_PATH=/home/rford/.claude/claude_desktop_config.json

# Database Connections
INFLUXDB_URL=http://10.32.3.27:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=caelum
INFLUXDB_BUCKET=metrics

REDIS_URL=redis://10.32.3.27:6379
POSTGRES_URL=postgresql://user:password@10.32.3.27:5432/caelum_analytics

# External Monitoring Services
PROMETHEUS_URL=http://10.32.3.27:9090
GRAFANA_URL=http://10.32.3.27:3000

# Authentication & Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60
ALGORITHM=HS256

# Notification Services (Optional)
PUSHOVER_USER_KEY=your-pushover-user
PUSHOVER_API_TOKEN=your-pushover-token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Data Collection Settings
COLLECTION_INTERVAL_SECONDS=30
RETENTION_DAYS=90
MAX_CONCURRENT_COLLECTORS=10

# WebSocket Settings
WS_MAX_CONNECTIONS=100
WS_HEARTBEAT_INTERVAL=30

# Development Settings
RELOAD=true
AUTO_RELOAD_DIRS=["src/caelum_analytics", "templates", "static"]

# Cluster Communication
CLUSTER_COMMUNICATION_PORT=8095

# Production-only secrets (for docker-compose.prod.yml)
# Uncomment and set these for production deployment
# INFLUXDB_PASSWORD=secure-password-here
# POSTGRES_PASSWORD=secure-password-here